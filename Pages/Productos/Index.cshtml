@page
@model TrasladoSeguro.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Index Products";
}
<h1>Index Products</h1>
<p>
    <form method="get">
        <div class="form-group">
            <input type="text" class="form-control" name="searchString" placeholder="Buscar productos">
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
</p>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
    <div>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 text-center">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Sells/Sells">
                                    <img src="~/images/se.jpg" alt="Sample Photo" width="30px" />SELLS
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Productos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

